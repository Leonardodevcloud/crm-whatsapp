# ===========================================
# CRM WhatsApp - Módulo Tutts
# ===========================================

# Supabase (onde estão as tabelas do WhatsApp)
NEXT_PUBLIC_SUPABASE_URL=https://SEU-PROJETO.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...sua-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJ...sua-service-role-key

# JWT Secret (DEVE SER O MESMO DO SERVIDOR TUTTS!)
# Copie o valor de JWT_SECRET do seu server.js
JWT_SECRET=seu-jwt-secret-igual-ao-tutts

# URL do backend Tutts (para validar tokens se necessário)
TUTTS_API_URL=https://seu-backend-tutts.railway.app

# API Tutts - Integração para verificar status do profissional
# Token gerado em: Menu > Integração > Sua API > Gerar token
TUTTS_INTEGRACAO_TOKEN=seu-token-de-integracao-tutts

# URL do servidor BI Tutts (para verificar operação)
BI_API_URL=https://tutts-backend-production.up.railway.app

# Configurações opcionais
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=CRM WhatsApp Tutts
